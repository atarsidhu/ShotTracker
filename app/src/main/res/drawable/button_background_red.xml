<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="#F0F0F0"/>
            <corners android:radius="10dp"/>
            <padding
                    android:top="5dp"
                    android:bottom="5dp"
                    android:left="10dp"
                    android:right="10dp"/>
            <stroke
                    android:width="2dp"
                    android:color="@color/red"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/white"/>
            <corners android:radius="10dp"/>
            <padding
                    android:top="5dp"
                    android:bottom="5dp"
                    android:left="10dp"
                    android:right="10dp"/>
            <stroke
                    android:width="2dp"
                    android:color="@color/red"/>
        </shape>
    </item>
</selector>