<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="5000">
       <KeyFrameSet>
           <KeyPosition motion:motionTarget="@+id/imgGolfBall" motion:framePosition="50"
                        motion:keyPositionType="parentRelative" motion:percentX="0.5" motion:percentY="0"/>
       </KeyFrameSet>
        <OnClick motion:targetId="@+id/imgGolfBall"/>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint android:layout_height="35dp"
                    android:layout_width="35dp" android:id="@+id/imgGolfBall"
                    motion:layout_constraintStart_toStartOf="parent" motion:layout_constraintEnd_toEndOf="parent"
                    motion:layout_constraintHorizontal_bias="0.05"
                    motion:layout_constraintTop_toTopOf="@+id/tvDistance"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint android:layout_height="35dp" motion:layout_constraintStart_toStartOf="parent"
                    motion:layout_constraintHorizontal_bias="0.95" motion:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="35dp" android:id="@+id/imgGolfBall"
                    motion:layout_constraintTop_toTopOf="@+id/tvDistance"/>
    </ConstraintSet>
</MotionScene>